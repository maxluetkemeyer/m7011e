<main class="container">
	<div class="row">
		<div class="col">
			{{#each articles}}
				<article>
					<h2>{{this.title}}</h2>
					{{#each this.article_tag}}
						<span class="badge text-bg-info">{{this.tag.name}}</span>
					{{/each}}
					<p class="article_content">{{this.content}}</p>
					<p class="fst-italic">{{convertDateForArticle this.created_at}} by {{this.users.name}}</p>
					
				</article>
			{{/each}}
		</div>
		<div class="col">
			{{#each tags}}
				<span class="badge text-bg-info">{{this.name}}</span>
			{{/each}}
		</div>
	</div>
</main>

<div class="container">
	<footer class="py-3 my-4 border-top">
		<p class="text-center text-body-secondary">© 2024 Max Lütkemeyer,
			Juliana Sanchez</p>
	</footer>
</div>