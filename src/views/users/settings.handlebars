<div class="container">
	<nav aria-label="breadcrumb">
		<ol class="breadcrumb">
			<li class="breadcrumb-item active" aria-current="page">Settings</li>
		</ol>
	</nav>
	<h2 class="mb-3">Settings</h2>
	<div class="row">
		<div class="col">
			<form
				action="/settings"
				method="POST"
				id="edit_settings_form"
			>
				<div class="mb-3">
					<label for="load_images" class="form-label">Load Images</label>
					<select
						class="form-select"
						id="load_images"
						name="load_images"
						form="edit_settings_form"
						required
					>
						<option value=true {{#if setting.load_images}}selected{{/if}}>Load thumbnails</option>
               			<option value=false {{#if setting.load_images}} {{else}}selected{{/if}}>Don't load thumbnails</option>
					</select>
				</div>
				<button type="submit" class="btn btn-primary">Save Changes</button>
			</form>
		</div>
		<div class="col"></div>
	</div>
</div>